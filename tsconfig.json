{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true
  },
  "references": [
    { "path": "./packages/config" },
    { "path": "./packages/core" },
    { "path": "./packages/state" },
    { "path": "./packages/cli" },
    { "path": "./packages/server" }
  ],
  "files": []
}
