{
  "name": "@c-ehrlich/cjode-root",
  "version": "0.10.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@10.15.0",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:npm": "bash scripts/build-like-npm.sh",
    "dev": "NODE_ENV=development turbo dev",
    "dev:client": "NODE_ENV=development node packages/cli/dist/cjode.js chat --server http://127.0.0.1:${PORT:-3001}",
    "dev:server": "NODE_ENV=development PORT=${PORT:-3001} HOST=${HOST:-127.0.0.1} pnpm --filter=@c-ehrlich/cjode-server dev",
    "dev:install": "bash scripts/dev-install.sh",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "clean": "turbo clean && rm -rf node_modules/.pnpm",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release": "bash scripts/release.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.30.0",
    "globals": "^15.0.0",
    "prettier": "^3.3.0",
    "tsx": "^4.20.5",
    "turbo": "^2.5.0",
    "typescript": "^5.7.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "zod": "^4.1.1"
  }
}
