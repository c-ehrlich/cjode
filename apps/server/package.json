{
  "name": "@cjode/server",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=20.9.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "dev": "NODE_ENV=development nodemon --exec 'tsup && node dist/index.js' --ext ts --watch src",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "fastify": "^5.0.0",
    "@fastify/cors": "^10.0.0",
    "dotenv": "^16.0.0",
    "@cjode/state": "workspace:*",
    "ai": "^5.0.0",
    "@ai-sdk/anthropic": "^2.0.0"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.7.0",
    "@types/node": "^22.0.0",
    "nodemon": "^3.0.0"
  }
}
